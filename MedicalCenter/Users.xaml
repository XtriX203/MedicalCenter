<Window x:Class="MedicalCenter.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenter"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="800">
    <Grid>
        <Border >
            <Border.Background>
                <ImageBrush ImageSource="IconImg/background2.jpg"></ImageBrush>
            </Border.Background>
        </Border>
        <Label Content="Users" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,326" RenderTransformOrigin="0.487,0.026" Width="125"></Label>
        <DataGrid x:Name="dg" Margin="231,113,231,80" FontSize="18" CellEditEnding="dg_CellEditEnding"></DataGrid>
        <Button x:Name="back" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Back" FontSize="20" Click="back_Click"></Button>

        <Button x:Name="delRow" Margin="568,10,162,350" Click="delRow_Click">
            <Button.Background>
                <ImageBrush ImageSource="IconImg/delete.png"></ImageBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
