<Window x:Class="MedicalCenter.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenter"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Border Margin="-92,10,-106,0">
            <Border.Background>
                <ImageBrush ImageSource="IconImg/background3.png"></ImageBrush>
            </Border.Background>
        </Border>
        <TextBlock Text="username" Margin="244,100,426,280" FontSize="24"></TextBlock>
        <TextBox x:Name="UserName" Margin="350,100,236,280"></TextBox>
        
        <TextBlock Text="password" Margin="244,200,426,180" FontSize="24"></TextBlock>
        <PasswordBox x:Name="Password" Margin="350,200,236,180"></PasswordBox>

        <Button x:Name="login" Margin="200,273,470,85" Content="LogIn" FontSize="24" FontWeight="Bold" Click="login_Click"></Button>
        <Button x:Name="register" Margin="425,273,236,85" Content="Register" FontSize="24" FontWeight="Bold" Click="register_Click"></Button>
    </Grid>
</Window>
    