        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCenter"
        mc:Ignorable="d"
        Title="NurseAdd" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="102,90,490,280" Text="Name:" FontSize="22" HorizontalAlignment="Center"></TextBlock>
        <TextBox x:Name="name" Margin="294,90,242,280"></TextBox>
        
        <TextBlock Margin="127,166,538,204" Text="Roon num:" FontSize="22" HorizontalAlignment="Center" Width="127"></TextBlock>
        <TextBox x:Name="room_num" Margin="294,166,242,204"></TextBox>

        <TextBlock Margin="170,248,559,122" Text="ID:" FontSize="22" HorizontalAlignment="Center"></TextBlock>
        <TextBox x:Name="id" Margin="294,248,242,122"></TextBox>

        <Button x:Name="confirm" Margin="294,328,298,37" Click="confirm_Click" FontSize="24">Ok</Button>
    </Grid>
</Window>
